{% extends 'base.html.twig' %}

{# {% form_theme formCreateArt 'bootstrap_4_layout.html.twig' %} #}

{% block title %}Présentation des catégories!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Vous êtes à la rubrique des catégories! ✅</h1>

<br/><br/>
<hr/>
<br/>

<table border="1">
<tbody>

<thead>
<tr>
<th> id </th>
<th> Titre </th>
<th> Résumé </th>
<th> Article </th>
<th> Action </th>
<th> Modifier </th>
<th> Supprimer </th>
</tr>
</thead>


{% for categorie in categories %}
<tr>
<td> {{ categorie.id}} </td>
<td> {{ categorie.titre}} </td>
<td> {{ categorie.resume}} </td>
<td>{% for article in categorie.articles %} 
{{ article.titre }}

{% endfor %}
</td>
<td><a href="{{ path('cat_id', {'id':categorie.id }) }}"> Afficher cette catégorie </a></td>
<td><a href="{{ path('edit_categorie', {'id':categorie.id }) }}"> Modifier cette catégorie </a></td>
<td><a href="{{ path('del_categorie', {'id':categorie.id }) }}"> supprimer cette catégorie </a></td>
</tr>
{% endfor %}
</tbody>
</table>

<br/><br/>
<hr/>
<br/>

{# <p> Le total des catégories est de {{ totalcategorie }}</p> #}
<p> Le total des catégories est {{ categories | length }}</p>
<br/><br/>
<hr/>
<br/>
<ul>
<li> <a href="{{ path('fcategorie')}}"> Ajouter une nouvelle catégorie </a> </li>
<li> <a href="{{ path('demarrage')}}"> Revenir à la page d'accueil </a> </li>
</ul>
</div>
{% endblock %}
